#!/usr/bin/env bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
CGV_DIR=${SCRIPT_DIR}/_deps/cgv-src

${SCRIPT_DIR}/bin/cgv_viewer plugin:cg_fltk \
    "type(shader_config):shader_path='${CGV_DIR}/libs/cgv_gl/glsl;${CGV_DIR}/libs/plot/glsl;${CGV_DIR}/libs/point_cloud/glsl;@CMAKE_SOURCE_DIR@/shader;'" \
    plugin:crg_grid \
    plugin:crg_stereo_view \
    plugin:trajectory_vis
